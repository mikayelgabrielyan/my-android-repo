<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_left_right">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/task_image"
            android:layout_width="@dimen/daily_meal_size"
            android:layout_height="@dimen/daily_meal_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/daily_meal_margin"
            android:layout_marginRight="@dimen/daily_meal_margin"
            android:layout_marginTop="@dimen/daily_meal_margin" />

        <LinearLayout
            android:layout_marginLeft="@dimen/daily_meal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/daily_meal_margin"
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/daily_meal_margin"
                android:textSize="@dimen/usernameSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>